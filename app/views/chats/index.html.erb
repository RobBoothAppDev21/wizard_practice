<div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 py-10 lg:py-14">
  <% unless @chats.any? %>
    <h1>Start A new chat</h1>
  <% end %>

  <%= button_to "Create Chat", chats_path, method: :post, data: { turbo: false }, class: "py-3 px-4 inline-flex items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" %>

  <div class="max-w-[85rem] py-2 lg:py-4 mx-auto">
      <!-- Card -->
      <div class="flex flex-col">
        <div class="overflow-x-auto">
          <div class="min-w-full inline-block align-middle">
            <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden dark:bg-neutral-900 dark:border-neutral-700">
              <!-- Table -->
              <table class="min-w-full divide-y divide-gray-200 dark:divide-neutral-700">
                <tbody class="divide-y divide-gray-200 dark:divide-neutral-700">
                  <% @chats.each do |chat| %>
                    <tr>
                        <td class="size-px whitespace-nowrap px-6 py-3">
                          <div class="flex items-center gap-x-3">
                            <%= link_to chat_path(chat) do %>
                            <span class="font-semibold text-sm text-gray-800 dark:text-white"><%= chat.messages.first&.content&.truncate(100) %></span>
                            <% end %>
                          </div>
                        </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
              <!-- End Table -->
            </div>
          </div>
        </div>
      </div>
      <!-- End Card -->
    </div>
</div>